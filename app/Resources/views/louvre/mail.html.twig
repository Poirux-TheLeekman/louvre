{% extends "base.html.twig" %}

{% block title %}Index{% endblock %}



{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-10 mx-auto">
            <h1 class="">Félicitations, pour accéder au musée, n'oubliez pas de vous munir de ce mail. </h1>
               <h2 class="">Récapitulatif de la commande :</h2>
                <dl>
                    <h3>
                        <dt>Propriétaire de la commande:</dt>
                    </h3>    
                        <dd>{{ command.holder|upper }}</dd>
                    <h3>   
                        <dt>Référence de la commande:</dt>
                    </h3>
                        <dd>{{ command.reference }}</dd>
                    <h3>   
                        <dt>Mail:</dt>
                    </h3>
                        <dd>{{ command.mail }}</dd>
                    <h3>
                        <dt>Date de la commande:</dt>
                    </h3>
                        <dd>{{ command.datecommand|date('d-m-Y') }}</dd>
                    <h3>
                        <dt>Reste à payer:</dt>
                    </h3>
                        <dd>0 €</dd>
                    
                </dl>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 col-md-10 mx-auto">
                <h2 class="">Liste des billets :</h2>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Date de visite</th>
                            <th>Durée</th>
                            <th>Type billet</th>
                            <th>Tarif réduit*</th>
                            <th>Prix</th>
                        </tr>
                    </thead>
                    <tbody>
                      {% for ticket in command.tickets %}
                            <tr>
                                <td>{{ ticket.lastname|upper }}</td>
                                <td>{{ ticket.firstname|capitalize }}</td>
                                <td>{{ ticket.visit|date('d-m-Y') }}</td>
                                <td>
                                  {% if ticket.duration == 1 %}
                                    <p>Journée</p>
                                    {% else %}
                                    <p>Demi-journée</p>
                                  {% endif %}
                                </td>
                                <td>{{ ticket.type }}</td>
                                <td>
                                  {% if ticket.offer == 1 %}
                                    <p>Oui</p>
                                    {% else %}
                                    <p>Non</p>
                                  {% endif %}
                                </td>
                                <td>{{ ticket.price }}€</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <p>*Une carte d'étudiant, de retraité ou de vétéran militaire, sera à présenter à l'entrée pour tout tarif réduit coché.</p>

    <P>Bonne Visite.</P>
        
    <a href="{{ 'http://www.louvre.fr' }}">
        Louvre.fr
    </a>
    <p class="copyright text-muted">
        Musée du Louvre,</br>
        Avenue des champs verts,</br>
        75058 Paris</br>
        France</br>
        Tel: +33 (0)1 45 99 00 26
    </p>
    <img src="{{ absolute_url('images/logo-louvre4.png') }}">	
	
{% endblock %}
	